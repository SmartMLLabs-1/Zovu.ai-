{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "frontend/dist",
          "buildCommand": "cd frontend && npm run build"
        }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/assets/(.*)", "dest": "/frontend/dist/assets/$1" },
      { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
    ]
  }